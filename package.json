{
  "name": "game-app",
  "private": true,
  "version": "0.2.12",
  "type": "module",
  "scripts": {
    "dev": "vite --host --open",
    "build": "tsc -b && vite build --mode production",
    "build:analyze": "tsc -b && vite build --mode production && npx vite-bundle-analyzer dist/assets/*.js",
    "build:production": "NODE_ENV=production tsc -b && vite build --mode production --minify esbuild",
    "build:profile": "tsc -b && vite build --mode production --profile --minify esbuild",
    "build:stats": "tsc -b && vite build --mode production && npx vite-bundle-analyzer dist/assets/*.js",
    "build:fast": "tsc -b --incremental && vite build --mode production --minify esbuild",
    "check": "tsc -b",
    "lint": "eslint .",
    "preview": "vite preview --host",
    "preview:analyze": "vite preview --host --mode analyze",
    "test": "vitest run --reporter=verbose",
    "test:systems": "vitest run src/systems",
    "test:systems:watch": "vitest src/systems",
    "test:systems:ui": "vitest --ui src/systems",
    "test:systems:coverage": "vitest run --coverage src/systems",
    "pretest:e2e": "bash .devcontainer/init-xvfb.sh",
    "cypress:install": "cypress install",
    "cypress:verify": "cypress verify",
    "coverage": "vitest run --coverage --coverage.reportOnFailure --reporter=verbose",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=coverage/junit.xml",
    "test:e2e": "mkdir -p cypress/results && start-server-and-test dev http://localhost:5173 'cypress run --browser chrome --reporter cypress-multi-reporters --reporter-options configFile=cypress.config.reporter.json'",
    "test:e2e:ci": "mkdir -p cypress/results && start-server-and-test dev http://localhost:5173 'cypress run --headless --browser chrome --reporter cypress-multi-reporters --reporter-options configFile=cypress.config.reporter.json'",
    "size-limit": "npx size-limit",
    "compress": "gzip -k dist/assets/*.js && gzip -k dist/assets/*.css",
    "find:unused": "npm run knip",
    "test:licenses": "license-compliance --direct --allow 'MIT;ISC;0BSD;BSD-2-Clause;BSD-3-Clause;Apache-2.0;Unlicense;CC0-1.0'",
    "docs": "typedoc --options typedoc.json",
    "knip": "knip",
    "madge": "npx madge --circular --ts-config ./tsconfig.json --extensions ts,tsx src/"
  },
  "dependencies": {
    "@pixi/layout": "^3.0.2",
    "@pixi/react": "^8.0.2",
    "@pixi/sound": "^6.0.1",
    "@pixi/ui": "^2.2.4",
    "howler": "^2.2.4",
    "pixi.js": "^8.10.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0"
  },
  "devDependencies": {
    "@cypress/react": "^9.0.1",
    "@cypress/webpack-dev-server": "^4.1.0",
    "@elevenlabs/elevenlabs-js": "^2.4.0",
    "@eslint/js": "^9.29.0",
    "@size-limit/preset-app": "^11.2.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/fs-extra": "11.0.4",
    "@types/howler": "^2.2.12",
    "@types/node": "^24.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/testing-library__jest-dom": "5.14.9",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-istanbul": "3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "cypress": "^14.5.0",
    "cypress-junit-reporter": "^1.3.1",
    "cypress-multi-reporters": "^2.0.5",
    "cypress-wait-until": "^3.0.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "knip": "^5.61.2",
    "license-compliance": "3.0.1",
    "madge": "^8.0.0",
    "mocha-junit-reporter": "2.2.1",
    "mochawesome": "7.1.3",
    "mochawesome-merge": "5.0.0",
    "mochawesome-report-generator": "6.2.0",
    "rollup-plugin-analyzer": "^4.0.0",
    "size-limit": "^11.2.0",
    "start-server-and-test": "^2.0.12",
    "ts-morph": "^26.0.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.5",
    "typedoc-plugin-markdown": "^4.7.0",
    "typedoc-plugin-mermaid": "^1.12.0",
    "typedoc-plugin-missing-exports": "^4.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^7.0.0",
    "vite-bundle-analyzer": "^0.23.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
