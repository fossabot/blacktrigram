{
  "name": "Black Trigram Dev Container",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "version": "24",
      "nvmVersion": "latest"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    }
  },

  // Enhanced system dependencies for PixiJS and testing
  "onCreateCommand": "sudo apt-get update && sudo apt-get install -y graphviz libgtk2.0-0 libgtk-3-0 libgbm-dev libnotify-dev libnss3 libxss1 libasound2 libxtst6 xauth xvfb dbus dbus-x11 fonts-noto fonts-noto-cjk fonts-noto-cjk-extra && .devcontainer/init-xvfb.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        // Core Development
        "dbaeumer.vscode-eslint",

        // GitHub extensions
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "github.vscode-github-actions",

        // TypeScript/Node support
        "ms-vscode.vscode-typescript-next",
        "christian-kohler.npm-intellisense",
        "ritwickdey.LiveServer",

        // Keep minimal formatting support
        "esbenp.prettier-vscode"
      ],

      "settings": {
        // Import optimized settings from .vscode/settings.json
        "typescript.tsdk": "./node_modules/typescript/lib",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit"
        },

        "eslint.workingDirectories": [
          { "mode": "auto" },
          { "directory": "./src", "changeProcessCWD": true },
          { "directory": "./cypress", "changeProcessCWD": true }
        ],
        "eslint.options": {
          "overrideConfigFile": "/workspaces/blacktrigram/.eslintrc.cjs"
        },
        "typescript.updateImportsOnFileMove.enabled": "always",
        "javascript.updateImportsOnFileMove.enabled": "always",
        "typescript.suggest.completeFunctionCalls": true,

        // Better import organization
        "typescript.preferences.importModuleSpecifier": "shortest",
        "javascript.preferences.importModuleSpecifier": "shortest",


        // Ensure Copilot prefers TypeScript file extensions
        "github.copilot.fileTypes": {
          "javascript": "typescript",
          "javascriptreact": "typescriptreact"
        }
      }
    }
  },

  // Enhanced post-create commands with better error handling
  "postCreateCommand": "npm install -g npm@latest typescript@latest eslint@latest && npm ci && npm run build && npx cypress verify",

  // Optimized post-start command
  "postStartCommand": "npm run build && echo 'âœ“ Development environment ready'",

  "remoteUser": "node",

  // Enhanced environment variables for better performance
  "containerEnv": {
    "CYPRESS_VERIFY_TIMEOUT": "100000",
    "DBUS_SESSION_BUS_ADDRESS": "unix:path=/run/dbus/system_bus_socket",
    "DISPLAY": ":99",
    "NODE_OPTIONS": "--max-old-space-size=8192 --no-warnings",
    "NPM_CONFIG_UPDATE_NOTIFIER": "false",
    "NPM_CONFIG_FUND": "false",
    "TERM": "xterm-256color",
    "LANG": "en_US.UTF-8",
    "LC_ALL": "en_US.UTF-8"
  },

  // Enhanced runtime arguments
  "runArgs": [
    "--privileged",
    "--security-opt",
    "seccomp=unconfined",
    "--memory=8g",
    "--cpus=4"
  ],

  // Mount optimizations
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "shutdownAction": "none",

  // Forward necessary ports
  "forwardPorts": [5173, 3000, 8080],
  "portsAttributes": {
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "notify"
    }
  }
}
